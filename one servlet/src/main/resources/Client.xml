<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-init-method="migrate">

    <bean id="main" class="servlet.RequestHelp">
        <constructor-arg>
            <map>
                <entry key="/login" value-ref="login"/>
                <entry key="/registration" value-ref="registrate"/>
                <entry key="/projects" value-ref="project"/>
                <entry key="/iterations" value-ref="iteration"/>
                <entry key="/tasks" value-ref="tasks"/>
                <entry key="/projects/add" value-ref="addProject"/>
                <entry key="/iterations/add" value-ref="addIteration"/>
                <entry key="/iteration/view" value-ref="ViewIter"/>
            </map>
        </constructor-arg>



    </bean>

    <bean id="ProjectDaoImpl"  class="servlet.projects.ProjectDaoImpl">
        <property name="ds" ref="SimpleJdbc"></property>

     </bean>
    <bean id="UserValid" class="servlet.validator.UserValidator">
        <property name="user" ref="UserDaoImpl"></property>
    </bean>

<bean id="ViewIter" class="servlet.comands.ViewIterationCommand">
    <property name="it" ref="Iter"></property>
</bean>
<bean id="SimpleJdbc" class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">

<constructor-arg type="javax.sql.DataSource" ref="DataSource"/>
</bean>

    <bean id="Iter" class="servlet.iterations.IterationDaoImpl">
       <property name="sjt" ref="SimpleJdbc"></property>
    </bean>
    <bean id="UserDaoImpl" class="servlet.users.UserDaoImpl">
        <property name="sjt" ref="SimpleJdbc"></property>
    </bean>

    <bean id="Tasks" class="servlet.tasks.TaskDaoImpl">
        <property name="sjt" ref="SimpleJdbc"></property>
    </bean>
    <bean id="flyway" class = "org.flywaydb.core.Flyway" init-method="migrate">
    <property name="dataSource" ref="DataSource"></property>

</bean>
<bean id="login" class="servlet.comands.LoginCommand" >

    <property name="userValidator" ref="UserValid"></property>

</bean>

    <bean id="project" class="servlet.comands.ProjectCommand">
        <property name="p" ref="ProjectDaoImpl"></property>
    </bean>
    <bean id="iteration" class="servlet.comands.IterationCommand">
        <property name="it" ref="Iter"></property>
    </bean>
    <bean id="tasks" class="servlet.comands.TaskCommand">
        <property name="task" ref="Tasks"></property>
    </bean>
    <bean id ="registrate" class="servlet.comands.RegistrationCommand">
        <property name="user" ref="UserDaoImpl"></property>
    </bean>
    <bean id="addProject" class="servlet.comands.AddProjectCommand">
        <property name="p" ref="ProjectDaoImpl"></property>
    </bean>
    <bean id="addIteration" class="servlet.comands.AddIterationCommand">
        <property name="it" ref="Iter"></property>
    </bean>

</beans>